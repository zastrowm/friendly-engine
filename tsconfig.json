{
  "compilerOptions": {
    /* warnings/errors */
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    /* others */
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2017",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "./",
    "paths": {
      "@friendly/elements/*": ["lib/friendly/elements/*"],
      "@friendly/wapp/*": ["lib/friendly/wapp/*"],
    }
  },
  "include": ["src", "lib/friendly/elements", "lib/friendly/wapp"],
  "exclude": ["node_modules"]
}
