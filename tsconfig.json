{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "./",
    "paths": {
      "@friendly/elements/*": ["lib/friendly/elements/*"],
    }
  },
  "include": ["src", "lib/friendly/elements"],
  "exclude": ["node_modules"]
}
